<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground">

    <com.coorchice.library.SuperTextView
        android:id="@+id/home_title_first"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color333"
        android:textSize="16sp"
        app:isShowState="true"
        app:state_drawable="@drawable/home_more"
        app:state_drawable_height="13dp"
        app:state_drawable_mode="right"
        app:state_drawable_padding_left="-15dp"
        app:state_drawable_width="50dp"
        tools:text="最新采购" />


    <com.zzy.common.widget.MeasureListView
        android:id="@+id/list_at_most"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/home_title_first" />


</RelativeLayout>
