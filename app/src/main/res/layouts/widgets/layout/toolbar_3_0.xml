<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:layout_scrollFlags="scroll|enterAlways">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_color111"
            android:textSize="16sp"
            tools:text="标题要改" />

        <ImageView
            android:id="@+id/toolbar_left_icon"
            android:layout_width="@dimen/backWH"
            android:layout_height="@dimen/backWH"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x6"
            android:padding="5dp"
            android:src="@drawable/ic_stepper_left_new" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_right_icon"
                android:layout_width="@dimen/backWH"
                android:layout_height="@dimen/backWH"
                android:padding="5dp"
                android:src="@mipmap/friend_search"
                android:visibility="gone"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/toolbar_right_text"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:padding="3dp"
                android:textColor="@color/text_color111"
                android:textSize="@dimen/titleRightTex"
                android:visibility="gone"
                tools:text="titile"
                tools:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_bg_ed" />


    </RelativeLayout>
</android.support.v7.widget.Toolbar>