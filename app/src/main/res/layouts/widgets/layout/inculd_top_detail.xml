<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="采购详情"
            android:textColor="@color/main_color"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />
    </RelativeLayout>


    <View style="@style/View_line_gray" />

    <View style="@style/View_line_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="[乔木]" />


        <TextView
            android:id="@+id/tv_quote_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:text="白蜡"

            />
    </LinearLayout>

    <View style="@style/View_line_green" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="乔木规格:" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_size"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="20170524" />


    </LinearLayout>

    <View style="@style/View_line_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="种植类型:" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_type"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="假植苗" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="采购数量" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_quote_num"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="300株"
                android:textColor="@color/red" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/View_line_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="用  苗  地:" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_address"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="厦门" />


    </LinearLayout>

    <View style="@style/View_line_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="截止日期:" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_close_date"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="2017-05-27" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!--<CheckBox-->
            <!--android:id="@+id/tv_quote_store_detail"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="35dp"-->
            <!--android:background="@drawable/rb_center_selecteor"-->
            <!--android:button="@null"-->
            <!--android:checked="true"-->
            <!--android:gravity="center_vertical|start"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:layout_margin="5dp"-->
            <!--android:text="采购商家信息"-->
            <!--android:textColor="@color/rb_left_selecteor" /> -->
            <CheckBox
                android:id="@+id/tv_quote_store_detail"
                style="@style/radio_seedling_common"
                android:layout_margin="5dp"
                android:background="@drawable/rb_center_selecteor"

                android:padding="2dp"
                android:text="采购商家信息"
                android:textColor="@color/rb_left_selecteor"
                android:textSize="11sp" />

            <CheckBox
                android:id="@+id/tv_quote_price_sug"
                style="@style/radio_seedling_common"
                android:layout_margin="5dp"
                android:background="@drawable/rb_center_selecteor"
                android:checked="true"
                android:text="报价要求"
                android:textColor="@color/rb_left_selecteor"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>