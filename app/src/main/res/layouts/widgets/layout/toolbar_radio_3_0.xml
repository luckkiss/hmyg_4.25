<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="46dp"
    android:background="@color/white"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:layout_scrollFlags="scroll|enterAlways">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_top_default"
        android:background="@color/white">


        <!--android:id="@+id/toolbar_title"-->


        <RadioGroup
            android:id="@+id/radio_group_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y17"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/rb_title_left"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rb_left_selecteor"
                android:checked="true"
                android:text="采购单"
                android:textColor="@color/rb_left_selecteor" />

            <RadioButton
                android:id="@+id/rb_title_center"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1px"
                android:background="@drawable/rb_center_selecteor"
                android:text="装车列表"
                android:textColor="@color/rb_left_selecteor" />

            <RadioButton
                android:id="@+id/rb_title_right"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rb_right_selecteor"
                android:text="项目信息"
                android:textColor="@color/rb_left_selecteor" />
        </RadioGroup>


        <ImageView
            android:id="@+id/toolbar_left_icon"
            android:layout_width="@dimen/backWH"
            android:layout_height="@dimen/backWH"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:padding="3dp"
            android:src="@drawable/btn_back" />


        <ImageView
            android:id="@+id/toolbar_right_icon"
            android:layout_width="@dimen/backWH"
            android:layout_height="@dimen/backWH"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x15"
            android:padding="3dp"
            android:src="@drawable/ic_sousuo"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/toolbar_right_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="@dimen/titleRightTex"
            android:visibility="gone"
            tools:text="titile"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/main_color" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>