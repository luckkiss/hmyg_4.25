<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/white">

        <com.hldj.hmyg.widget.MyCircleImageView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_persion_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/head"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/head"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="150dp"
            android:textColor="@color/text_color333"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/head"
            app:layout_constraintTop_toTopOf="@+id/head"
            tools:text="Cherrsfasdafdafafdafda" />


        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/time_city"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/title"
            android:layout_toRightOf="@+id/title"
            android:adjustViewBounds="true"
            android:src="@mipmap/wd_smrz_tg" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignTop="@+id/title"
            android:layout_toEndOf="@+id/imageView13"
            android:layout_toRightOf="@+id/imageView13"
            android:src="@mipmap/wd_gys_lv1" />


        <TextView
            android:id="@+id/time_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/head"
            android:text="11小时前  福建  厦门"
            android:textColor="@color/text_color999"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/head"
            app:layout_constraintLeft_toLeftOf="@+id/title" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/purchase"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_right_top"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="删除"
            android:textColor="@color/text_color999"
            android:visibility="visible"
            app:corner="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:left_bottom_corner="true"
            app:left_top_corner="true"
            app:right_bottom_corner="true"
            app:right_top_corner="true"
            app:stroke_color="@color/text_colorccc"
            app:stroke_width="2px"

            tools:visibility="visible" />


    </RelativeLayout>


    <TextView
        android:id="@+id/descript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="56dp"
        android:autoLink="phone"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.3"
        android:text="香樟价格实惠质量香樟价格实惠质量又好     价格实惠质量又好，可供应5000株香樟价又好，可供应5000株香樟价格实惠质量又好，可供应5000株香樟价格实惠质量又好，可供应5000株香樟价格实惠质量又好，香樟价格实惠质量又好，可供应5000株香樟价格实惠质量又好，可供应5000株香樟价格实惠质量又好，可供应5000株香樟价格实惠质量又好，可供应5000株可供应5000株."
        android:textColor="@color/text_color333"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head" />


    <com.zzy.common.widget.MeasureGridView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:horizontalSpacing="0dp"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:verticalSpacing="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descript" />


    <com.hldj.hmyg.widget.MyImageViewShowVideo
        android:id="@+id/video"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="56dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:background="@color/main_color"
        tools:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="50dp"
        android:weightSum="1">

        <com.hldj.hmyg.widget.DrawableCenterText
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.10"
            android:drawableLeft="@mipmap/like"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="1234" />

        <com.hldj.hmyg.widget.DrawableCenterText
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="0.10"
            android:drawableLeft="@mipmap/msg"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="3264" />

    </LinearLayout>


    <include
        layout="@layout/item_bottom_tow_button"
        android:visibility="gone" />

    <View
        android:id="@+id/botton_line"
        style="@style/View_line_gray" />


</LinearLayout>