<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="25dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="5dp"
    android:orientation="horizontal"
    android:visibility="visible">

    <RadioButton
        android:id="@+id/rb_auto_add_left"
        style="@style/radio_seedling_common"
        android:layout_width="50dp"
        android:background="@drawable/rb_left_selecteor"
        android:checked="true"
        android:minHeight="25dp"
        android:minWidth="50dp"
        android:singleLine="true"
        android:textColor="@color/rb_left_selecteor"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/rb_auto_add_center"
        style="@style/radio_seedling_common"
        android:layout_width="50dp"
        android:layout_marginLeft="-1px"
        android:background="@drawable/rb_center_selecteor"
        android:minHeight="25dp"
        android:minWidth="50dp"

        android:singleLine="true"
        android:text="1.0M量"
        android:textColor="@color/rb_left_selecteor"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/rb_auto_add_right"
        style="@style/radio_seedling_common"
        android:layout_width="50dp"
        android:background="@drawable/rb_right_selecteor"
        android:minHeight="25dp"
        android:minWidth="50dp"

        android:singleLine="true"
        android:text="1.3M量"
        android:textColor="@color/rb_left_selecteor"
        android:textSize="12sp"

        />
</RadioGroup>