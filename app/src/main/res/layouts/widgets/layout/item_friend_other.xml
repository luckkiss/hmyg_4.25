<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px98"
    android:background="@drawable/bg_top_line"
    android:orientation="horizontal">


    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/first"
        android:layout_width="0dp"
        android:layout_height="@dimen/px98"
        android:layout_weight="1"
        android:drawableLeft="@drawable/like_selector"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="点赞" />

    <View
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:background="@color/gray_bg" />

    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/second"
        android:layout_width="0dp"
        android:layout_height="@dimen/px98"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/msg_big"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="评论" />

    <View
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:background="@color/gray_bg" />

    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/third"
        android:layout_width="0dp"
        android:layout_height="@dimen/px98"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="电话" />

    <View
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:background="@color/gray_bg" />

    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/fourth"
        android:layout_width="0dp"
        android:layout_height="@dimen/px98"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/more"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="更多" />


</LinearLayout>