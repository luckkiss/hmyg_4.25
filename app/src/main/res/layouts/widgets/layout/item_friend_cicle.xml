    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/first"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/like_selector"
        android:drawablePadding="5dp"
        android:text="点赞 4 "
        android:textColor="@color/text_color666"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/textView29"
        app:layout_constraintRight_toLeftOf="@+id/second"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />


    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/fourth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="0dp"
        android:drawableLeft="@mipmap/more"
        android:drawablePadding="5dp"
        android:gravity="left|center"
        android:text="更多"
        android:textColor="@color/text_color666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/first"
        app:layout_constraintLeft_toRightOf="@+id/third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/first"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/third"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="5dp"
        android:text="电话"
        android:textColor="@color/text_color666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/first"
        app:layout_constraintLeft_toRightOf="@+id/second"
        app:layout_constraintRight_toLeftOf="@+id/fourth"
        app:layout_constraintTop_toTopOf="@+id/first"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <com.hldj.hmyg.widget.DrawableCenterText
        android:id="@+id/second"
        layout="@layout/item_friend_other"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:drawableLeft="@mipmap/msg_big"
        android:drawablePadding="5dp"
        android:text="评论"
        android:textColor="@color/text_color666"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/first"
        app:layout_constraintRight_toLeftOf="@+id/third"
        app:layout_constraintTop_toTopOf="@+id/first" />

    <!--底部 黑色块线-->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginLeft="0dp"
        android:alpha="0.5"
        android:background="@color/divider_color_bg"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@color/gray_bg_ed"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


