<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <com.hldj.hmyg.widget.MyCircleImageView
        android:id="@+id/head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_persion_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:text="Cherry"
        android:textColor="@color/text_color333"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/head"
        app:layout_constraintTop_toTopOf="@+id/head" />

    <TextView
        android:id="@+id/time_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="11小时前  福建  厦门"
        android:textColor="@color/text_color999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/head"
        app:layout_constraintLeft_toLeftOf="@+id/title" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="28dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/purchase"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_right_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/error_stroke_color"
        android:text="删除"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:visibility="visible" />


    <com.coorchice.library.SuperTextView
        android:id="@+id/descript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:autoLink="phone"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="5"
        android:text="香樟价格实惠质量又a好，可供应5000株可供应5000株."
        android:textColor="@color/text_color333"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/time_city"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <com.zzy.common.widget.MeasureGridView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="56dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:horizontalSpacing="0dp"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:verticalSpacing="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/descript"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descript"
        app:layout_goneMarginTop="4dp"
        tools:background="@color/red"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteY="111dp"
        tools:padding="10dp" />


