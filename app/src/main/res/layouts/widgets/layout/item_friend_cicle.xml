    <com.hldj.hmyg.widget.MyImageViewShowVideo
        android:id="@+id/video"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"

        android:foregroundTint="@color/white"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/imageView8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        tools:background="@color/main_color"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_height="80dp"
        tools:layout_width="80dp"
        tools:text="这是一个video"
        tools:width="100dp" />


    <TextView
        android:id="@+id/textView29"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/imageView8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video"
        tools:background="@color/main_color"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_height="40dp"
        tools:padding="10dp"
        tools:text="1346546  textView29"
        tools:width="100dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView29"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourth"
        tools:background="@color/blue"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_height="41px"
        tools:text="点赞下边一条线a textView30" />

    <com.zzy.common.widget.MeasureListView
        android:id="@+id/receive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:background="@color/color_bg_f5"
        android:divider="@null"
        android:dividerHeight="0px"
        android:paddingBottom="6dp"
        android:paddingRight="8dp"
        android:text="leei:这棵树不错"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView29"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:padding="30dp" />

