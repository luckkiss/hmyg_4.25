<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_program_pur_projectName_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/agreement_checkbox_bg"
            android:checked="false"
            android:gravity="start"
            android:paddingLeft="10.0dip"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeTitle"
            tools:text="股装二路精光" />


        <TextView
            android:id="@+id/tv_program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeContent"
            tools:text="项目名称" />

        <TextView
            android:id="@+id/tv_program_order_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeContent"
            tools:text="用苗单位：厦门某某某" />


        <TextView
            android:id="@+id/tv_program_pur_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeContent"
            tools:text="用苗地：厦门" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@+id/tv_program_pur_phoner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="联系客服：中小花" />


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingTop="3dp"
                android:src="@drawable/dianhua" />

            <TextView
                android:id="@+id/tv_program_pur_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/tip_yellow"
                android:textSize="13sp"
                tools:text="15864982148" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_program_service_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeContent"
            tools:text="代购服务费" />


        <TextView
            android:id="@+id/tv_program_pur_close_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="开标时间" />


        <TextView
            android:id="@+id/tv_program_purchase_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5dp"
            android:text="报价要求：点击查看"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/white_60"
            android:gravity="center">

            <TextView

                android:id="@+id/tv_head_ser_po_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="开标倒计时:"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeContent" />

            <TextView
                android:id="@+id/tv_head_ser_po"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="*天*小时*分钟*秒"
                android:textColor="@color/tip_yellow"
                android:textSize="@dimen/textSizeContent" />


        </LinearLayout>


        <!--<TextView-->
        <!--android:id="@+id/tv_no_permision"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="40dp"-->
        <!--android:background="@color/white"-->
        <!--android:gravity="center"-->
        <!--android:text="-&#45;&#45; 您没有选标权限 -&#45;&#45;"-->
        <!--android:textColor="@color/price_orige"-->
        <!--android:visibility="gone"-->
        <!--tools:visibility="visible" />-->

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/zdbj"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>