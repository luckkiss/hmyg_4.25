<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dip"
            android:layout_marginTop="2.5dip"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2.0dip"
                android:layout_toLeftOf="@+id/tv_03"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_program_pur_projectName_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/agreement_checkbox_bg"
                    android:checked="false"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizeXXX"
                    tools:text="股装二路精光" />
            </LinearLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_program_pur_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="用苗地块：厦门" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@+id/tv_program_pur_phoner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="联系客服：中小花" />


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingTop="3dp"
                android:src="@drawable/dianhua" />

            <TextView
                android:id="@+id/tv_program_pur_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/fabu_yellow"
                android:textSize="13sp"
                tools:text="15864982148" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_program_pur_close_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="3dp"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="截止时间" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_1"
            android:layout_width="110dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="报价说明"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeX"
            app:corner="4dp"
            app:left_bottom_corner="true"
            app:left_top_corner="true"
            app:right_bottom_corner="true"
            app:right_top_corner="true"
            app:solid="@color/main_color"
            app:stroke_color="@color/white"
            app:stroke_width="1dp" />


        <TextView
            android:id="@+id/tv_head_ser_po"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_60"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="一下报价未包含10%服务费"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize" />


        <!--<TextView-->
            <!--android:id="@+id/tv_no_permision"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:background="@color/white"-->
            <!--android:gravity="center"-->
            <!--android:text="-&#45;&#45; 您没有选标权限 -&#45;&#45;"-->
            <!--android:textColor="@color/price_orige"-->
            <!--android:visibility="gone"-->
            <!--tools:visibility="visible" />-->

    </LinearLayout>

</FrameLayout>