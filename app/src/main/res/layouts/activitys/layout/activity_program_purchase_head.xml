<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dip"
            android:layout_marginTop="2.5dip"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2.0dip"
                android:layout_toLeftOf="@+id/tv_03"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_program_pur_projectName_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/agreement_checkbox_bg"
                    android:checked="false"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizeXXX"
                    tools:text="股装二路精光" />
            </LinearLayout>


            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="报价说明"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:solid="@color/main_color"
                app:stroke_color="@color/white"
                app:stroke_width="1dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_program_pur_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize"
            tools:text="用苗地块：厦门" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@+id/tv_program_pur_phoner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeS"
                tools:text="联系客服：中小花" />


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingTop="3dp"
                android:src="@drawable/dianhua" />

            <TextView
                android:id="@+id/tv_program_pur_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/fabu_yellow"
                android:textSize="@dimen/textSizeS"
                tools:text="15864982148" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_program_pur_close_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="3dp"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeS"
            tools:text="截止时间" />

        <TextView
            android:id="@+id/tv_head_ser_po"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_60"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="一下报价未包含10%服务费"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize" />

    </LinearLayout>

</FrameLayout>