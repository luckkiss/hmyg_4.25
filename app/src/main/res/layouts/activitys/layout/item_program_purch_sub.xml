<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wheat"
    >

    <TextView
        android:id="@+id/tv_program_purch_sub_price_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="￥3200/株"
        android:textColor="@color/actionsheet_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_program_purch_sub_price_cont_serv_pric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="￥3520(含服务费)"
        android:textColor="@color/actionsheet_red"
        app:layout_constraintLeft_toRightOf="@+id/tv_program_purch_sub_price_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_program_purch_sub_use_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="已采用"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="85dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baojiaxiangqing_yicaiyong" />

    <TextView
        android:id="@+id/tv_program_purch_sub_suplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="花木易购供应商"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_purch_sub_price_type" />

    <TextView
        android:id="@+id/tv_program_purch_sub_plant_addt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="苗源地：福建 漳州"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_purch_sub_suplier" />

    <TextView
        android:id="@+id/tv_program_purch_sub_space_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="规格：米径：20；。。。。。。"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_purch_sub_plant_addt" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="由花木易购发货"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_purch_sub_use_state" />

    <TextView
        android:id="@+id/tv_program_purch_sub_is_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="已核实"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_purch_sub_space_text" />

    <TextView
        android:id="@+id/tv_program_purch_sub_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_purch_sub_space_text"
        tools:text="一株胸径19.8 一株胸径23"
        app:layout_constraintLeft_toRightOf="@+id/tv_program_purch_sub_is_true"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_program_purch_sub_images_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_purch_sub_is_true"
        app:layout_constraintVertical_bias="0.0"
        tools:text="有2张图片" />
</android.support.constraint.ConstraintLayout>