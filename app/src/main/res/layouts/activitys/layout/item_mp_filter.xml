<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <com.coorchice.library.SuperTextView
        android:id="@+id/search_mm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px88"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="搜我的苗木"
        android:textColor="@color/text_color666"
        app:isShowState="true"
        app:solid="@color/trans" />

    <View
        style="@style/View_line_gray_1px"
        android:layout_width="match_parent"
        android:background="@color/divider_color_bg"

        android:layout_marginLeft="@dimen/px12"
        android:layout_marginRight="@dimen/px12"

        />


    <com.coorchice.library.SuperTextView
        android:id="@+id/search_mp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px88"
        android:layout_centerInParent="true"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="搜我的苗圃"
        android:textColor="@color/text_color666"
        app:solid="@color/trans"
        app:state_drawable_height="20dp"
        app:state_drawable_width="20dp" />

</LinearLayout>
