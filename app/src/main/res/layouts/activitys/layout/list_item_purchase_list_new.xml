<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_my_list"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:id="@+id/ll_item_broker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2.0dip"
                android:layout_toLeftOf="@+id/tv_03"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/agreement_checkbox_bg"
                    android:checked="false"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="jklfasfasfa" />

                <!--<TextView-->
                    <!--android:id="@+id/tv_ac"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:singleLine="true"-->
                    <!--android:textColor="@color/red"-->
                    <!--android:textSize="14.0sp" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:gravity="center_vertical"
                android:paddingBottom="2.5dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="2.5dip"
                android:singleLine="true"
                android:textColor="@color/orange"
                android:textSize="13sp"
                tools:text="jklfasfasfa" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="12sp"
                tools:text="jklfasfasfa" />
        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="visible">

            <com.hhl.library.FlowTagLayout
                android:id="@+id/mobile_flow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                tools:visibility="gone" />
        </HorizontalScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12.0sp"
                    tools:text="已有一条品种" />

                <TextView
                    android:id="@+id/tv_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#5A5A5A"
                    android:textSize="12.0sp"
                    android:visibility="gone"
                    tools:text="已有一条报价"
                    tools:visibility="visible" />
                <!--默认隐藏，预览界面通过tools 来显示布局-->
            </RelativeLayout>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/xuxian"
            android:layerType="software"
            android:padding="5dp" />


        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_caozuo01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:gravity="center_vertical|right"
            android:paddingBottom="2.5dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="2.5dip"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="12.0sp"
            tools:text="截止日期" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/tv_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="14.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0" />

        <LinearLayout
            android:id="@+id/ll_caozuo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_margin="5.0dip"
                android:layout_weight="5.0"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:textColor="@color/red"
                android:textSize="11.0sp" />

            <TextView
                android:id="@+id/tv_caozuo02"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/green_btn_selector"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:textColor="@color/main_color"
                android:textSize="11.0sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_caozuo03"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/green_btn_selector"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:text="我要报价"
                android:textColor="@color/main_color"
                android:textSize="11.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>