<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/notices_title"
        android:layout_width="match_parent"
        android:layout_height="42sp"
        android:background="@color/white"
        app:left_src="@drawable/ic_back"
        app:right_src="@drawable/ic_winstyle_share"
        app:splite_mode="true"
        app:title="成交公告" />

    <ProgressBar
        android:id="@+id/notices_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:progressDrawable="@drawable/pg"
        android:visibility="gone" />

    <WebView
        android:id="@+id/notices_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />


</LinearLayout>