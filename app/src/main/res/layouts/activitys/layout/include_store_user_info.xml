<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/head_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px186"
    android:background="@color/trans">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/px126"
        android:layout_height="@dimen/px126"
        android:layout_alignParentLeft="true"

        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:foreground="@drawable/zheng_white"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/company_head" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeTitle"
        tools:text="金华永言苗木" />


    <TextView
        android:id="@+id/brower_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/logo"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeContent"
        tools:text="浏览量 2000 " />

    <ImageView
        android:id="@+id/store_identity"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:adjustViewBounds="true"
        android:src="@drawable/qyrz_new" />


</RelativeLayout>
