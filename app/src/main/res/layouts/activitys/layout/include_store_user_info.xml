<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/head_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px186"
    android:background="@color/trans">


    <!--<com.hldj.hmyg.widget.RoundRectImageView-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/px126"
        android:layout_height="@dimen/px126"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/company_head"
        app:civ_border_color="@color/maimiao_yellower"
        app:civ_border_width="3px" />


    <TextView
        android:id="@+id/store_hzgys"
        android:layout_width="@dimen/px148"
        android:layout_height="@dimen/px38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:adjustViewBounds="true"
        android:background="@mipmap/store_hzgys"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="合作供应商"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/brower_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignLeft="@+id/group"
        android:layout_alignStart="@+id/group"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textColor="@color/text_color999"
        android:textSize="@dimen/textSizeContent"
        tools:text="浏览量 2000 " />

    <!--        android:background="@drawable/black_alpha_60_10"
    -->
    <LinearLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px63"
        android:layout_alignTop="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:orientation="horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeTitle"
        tools:text="金华永言苗木">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:textColor="@color/white"

            android:textSize="@dimen/textSizeTitle"
            tools:text="金华永言苗木" />

        <ImageView
            android:id="@+id/store_identity"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:adjustViewBounds="true"
            android:src="@drawable/qyrz_new" />

    </LinearLayout>


</RelativeLayout>
