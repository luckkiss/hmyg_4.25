<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <com.coorchice.library.SuperTextView
        android:id="@+id/sptv_store_home_head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/logo"
        app:corner="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:left_bottom_corner="true"
        app:left_top_corner="true"
        app:right_bottom_corner="true"
        app:right_top_corner="true"
        app:solid="@color/trans"
        app:state_drawable_height="70dp"
        app:state_drawable_width="70dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:src="@drawable/gongsi"
        app:layout_constraintLeft_toRightOf="@+id/sptv_store_home_head"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        android:padding="2dp"
        android:src="@drawable/seller_name"
        app:layout_constraintLeft_toRightOf="@+id/sptv_store_home_head"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:padding="2dp"
        android:src="@drawable/seller_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/sptv_store_home_head"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_infot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:maxWidth="190dp"
        android:singleLine="true"
        android:textSize="@dimen/textSizeS"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextViewTextViewTextViewTextViewTextView" />


    <TextView
        android:id="@+id/tv_infot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/textSizeS"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/tv_infot1"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_infot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:autoLink="phone"
        android:textSize="@dimen/textSizeS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/tv_infot2"
        app:layout_constraintVertical_bias="1.0"
        tools:text="TextView" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="47.0dip"
        android:layout_height="47.0dip"
        android:layout_marginRight="16dp"
        android:src="@drawable/seller_makingacall_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>