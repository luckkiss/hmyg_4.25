<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_bottom_line"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"

        android:background="@color/white">

        <com.hldj.hmyg.widget.MyCircleImageView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_persion_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/head"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/head"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="150dp"
            android:textColor="@color/text_color333"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/head"
            app:layout_constraintTop_toTopOf="@+id/head"
            tools:text="Cherrsfasdafdafafdafda" />


        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/time_city"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/title"
            android:layout_toRightOf="@+id/title"
            android:adjustViewBounds="true"
            android:src="@mipmap/wd_smrz_tg" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/title"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/imageView13"
            android:layout_toRightOf="@+id/imageView13"
            android:adjustViewBounds="true"
            android:src="@mipmap/wd_gys_lv1" />


        <TextView
            android:id="@+id/time_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/head"
            android:text="11小时前  福建  厦门"
            android:textColor="@color/text_color999"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/head"
            app:layout_constraintLeft_toLeftOf="@+id/title" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/purchase"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_right_top"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="进店"
            android:textColor="@color/main_color"
            android:visibility="visible"
            app:corner="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:left_bottom_corner="true"
            app:left_top_corner="true"
            app:right_bottom_corner="true"
            app:right_top_corner="true"
            app:stroke_color="@color/main_color"
            app:stroke_width="2px"

            tools:visibility="visible" />


    </RelativeLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <com.hldj.hmyg.widget.MyImageView
            android:id="@+id/iv_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_left"
            android:layout_marginLeft="@dimen/padding_left"
            android:layout_marginRight="@dimen/px14"
            android:layout_marginTop="@dimen/padding_left"
            android:layout_weight="1"
            android:src="@color/main_color" />

        <com.hldj.hmyg.widget.MyImageView
            android:layout_width="0dp"
            android:id="@+id/iv_center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_left"
            android:layout_marginTop="@dimen/padding_left"
            android:layout_weight="1"
            android:src="@color/blue" />

        <com.hldj.hmyg.widget.MyImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_right"
            android:layout_marginBottom="@dimen/padding_left"
            android:layout_marginLeft="@dimen/px14"
            android:layout_marginRight="@dimen/padding_left"
            android:layout_marginTop="@dimen/padding_left"
            android:layout_weight="1"
            android:src="@color/red" />


        <!--<include layout="@layout/item_footer_d_new_mp" />-->
    </LinearLayout>


    <TextView
        style="@style/text_left_name_style"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:paddingLeft="@dimen/padding_left"
        android:text="主营品种:三角梅，香樟，从草花"

        />


</LinearLayout>