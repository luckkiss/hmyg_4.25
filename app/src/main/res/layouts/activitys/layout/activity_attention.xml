<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_3_0" />

    <TextView
        android:id="@+id/tijia"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="添加手机联系人"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/textSizeXXX" />

    <View style="@style/View_line_gray" />

    <!--item_invite_friend_list-->
    <com.hldj.hmyg.buyer.weidet.CoreRecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>