<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_bottom_line"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView64"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView64"
        android:paddingLeft="12dp"
        android:text="1.花木园林科技"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/px32"

        />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_below="@+id/title"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:textSize="@dimen/px24"
        android:text="在售（10） 下架 （10）"
        android:textColor="@color/text_color666" />

    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_below="@+id/textView64"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:textSize="@dimen/px24"

        android:text="更新时间:-"
        android:textColor="@color/text_color666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_below="@+id/update_time"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_top_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑" />

        <View
            style="@style/View_line_vertical"/>

        <TextView
            android:id="@+id/mmgl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="苗木管理"
            android:textColor="@color/main_color" />


    </LinearLayout>


</RelativeLayout>
