<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px176"
        android:background="@drawable/bg_bottom_line">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/px128"
            android:layout_height="@dimen/px128"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/home_icon_type06" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/logo"
            android:textColor="@color/text_color333"
            android:layout_toRightOf="@+id/logo"
            android:gravity="center"
            android:text="金华永言苗木"
            android:textSize="@dimen/textSizeTitle" />


        <TextView
            android:id="@+id/textView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView56"
            android:layout_alignStart="@+id/textView56"
            android:layout_below="@+id/imageView18"
            android:gravity="center"
            android:text="粉丝 2 "
            android:textColor="@color/text_color999"
            android:textSize="@dimen/textSizeContent" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/textView57"
            android:layout_alignBottom="@+id/textView57"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/textView57"
            android:layout_toRightOf="@+id/textView57"
            android:gravity="center"
            android:text="浏览量 2000 "
            android:textColor="@color/text_color999"
            android:textSize="@dimen/textSizeContent" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView56"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/textView56"
            android:layout_toRightOf="@+id/textView56"
            android:src="@mipmap/wd_gys_lv2" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="被关注" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="访客" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="来电记录" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="处理提示" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>


    </LinearLayout>

    <View style="@style/View_line_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:gravity="center"
        android:text="有10条求购匹配您的苗圃品种>>" />

    <View style="@style/View_line_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px74"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="我的苗圃"
        android:textColor="@color/text_color111"
        android:textSize="@dimen/textSizeContent" />


    <Button
        android:id="@+id/btn_xzmp"
        style="@style/save_bottom"
        android:text="新增苗圃" />


</LinearLayout>