<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/head_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px186"
        android:background="@drawable/bg_bottom_line">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/px128"
            android:layout_height="@dimen/px128"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/company_head" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/logo"
            android:layout_toRightOf="@+id/logo"
            android:gravity="center"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/textSizeTitle"
            tools:text="金华永言苗木" />


        <TextView
            android:id="@+id/brower_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/imageView21"
            android:gravity="center"
            android:textColor="@color/text_color999"
            android:textSize="@dimen/textSizeContent"
            tools:text="浏览量 2000 " />

        <ImageView
            android:id="@+id/store_identity"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/name"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:adjustViewBounds="true"
            android:src="@drawable/qyrz"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/arrow_right_eq" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:weightSum="4">


        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/fangke" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="访客"
                android:textSize="@dimen/textSizeContent" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/ldjl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="来电记录"
                android:textSize="@dimen/textSizeContent" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/ppqg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="报价商机"
                android:textSize="@dimen/textSizeContent" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>

        <cn.bingoogolapple.badgeview.BGABadgeLinearLayout
            android:id="@+id/ll_show_num4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/dcl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="待处理"
                android:textSize="@dimen/textSizeContent" />

        </cn.bingoogolapple.badgeview.BGABadgeLinearLayout>


    </LinearLayout>


    <View style="@style/View_line_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_line"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_left"
                android:layout_width="200dp"
                android:layout_height="@dimen/px74"
                android:layout_alignParentLeft="true"

                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="我的苗圃"
                android:textColor="@color/text_color111"
                android:textSize="@dimen/textSizeTitle" />


            <ImageView
                android:id="@+id/filter"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:src="@mipmap/friend_search" />

        </RelativeLayout>


        <include
            layout="@layout/include_search_layout_for_mp_head"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="8dp" />


    </LinearLayout>


</LinearLayout>