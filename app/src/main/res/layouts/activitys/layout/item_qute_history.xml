<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qute_history_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_line">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_bottom_line"
        android:gravity="center_vertical"
        android:text="以下是您的报价"
        android:textColor="@color/text_color666"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dhj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="[到货价]"
        android:textColor="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/title"

        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥100"
        android:layout_marginLeft="4dp"
        android:textColor="@color/price_orige"
        app:layout_constraintStart_toEndOf="@+id/dhj"
        app:layout_constraintTop_toTopOf="@+id/dhj" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/株"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toTopOf="@+id/dhj" />


    <TextView
        android:id="@+id/myd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:text="苗源地："
        android:textSize="@dimen/textSizeContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhj" />

    <TextView
        android:id="@+id/remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:text="说明："
        android:textSize="@dimen/textSizeContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myd" />

    <TextView
        android:id="@+id/myd_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广东中山"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/textSizeContent"
        app:layout_constraintStart_toEndOf="@+id/myd"
        app:layout_constraintTop_toTopOf="@+id/myd" />


    <TextView
        android:id="@+id/remarks_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/textSizeContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ddh"
        app:layout_constraintStart_toEndOf="@+id/remarks"
        app:layout_constraintTop_toTopOf="@+id/remarks"
        tools:text="这是m的cm的苗的苗这是m的cm的苗的苗这是m的cm的苗的苗这是m的cm的苗的苗这是m的cm的苗的苗" />

    <TextView
        android:id="@+id/ddh"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/round_rectangle_bg_red_gray"
        android:gravity="center"
        android:padding="4dp"
        android:text="删除"
        android:textColor="@color/text_color666"
        android:textSize="@dimen/textSizeContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myd"
        app:layout_constraintVertical_bias="0.0" />


    <com.coorchice.library.SuperTextView
        android:id="@+id/tupian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="共2张图片"
        android:textSize="@dimen/textSizeContent"
        app:isShowState="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dhj"
        app:layout_goneMarginRight="16dp"
        app:state_drawable_height="15dp"
        app:state_drawable_mode="right"
        app:state_drawable_width="18dp" />


</android.support.constraint.ConstraintLayout>