<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="42sp"
        android:background="@color/white"
        app:left_src="@drawable/ic_back"
        app:right_src="@drawable/ic_winstyle_share"
        app:title="新闻资讯" />


    <android.support.design.widget.TabLayout
        android:id="@+id/news_tb_layout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#ffffff"
        android:fillViewport="false"
        app:layout_scrollFlags="scroll"
        app:tabGravity="fill"
        app:tabIndicatorColor="#057523"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#057523"
        app:tabTextColor="#ced0d3" />


    <android.support.v4.view.ViewPager
        android:id="@+id/news_vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>