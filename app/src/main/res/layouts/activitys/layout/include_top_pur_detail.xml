<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mainView_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="采购详情"
            android:textColor="@color/main_color"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/btn_back"
            android:padding="5dp"
            />
    </RelativeLayout>


    <View style="@style/View_line_gray" />

    <View style="@style/View_line_gray_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textColor="@color/little_black"
            android:textSize="14sp"
            tools:text="[乔木]" />


    </LinearLayout>

    <View style="@style/View_line_gray_1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_guige_left"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="苗木规格:"
            android:textSize="13sp" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_size"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="13sp"
            tools:text="20170524" />


    </LinearLayout>

    <View style="@style/View_line_gray_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="种植类型:"
            android:textSize="13sp" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_type"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="13sp"
            tools:text="假植苗" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="采购数量:"
                android:textSize="13sp" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_quote_num"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingRight="5dp"
                android:textColor="@color/red"
                android:textSize="13sp"
                tools:text="300株" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/View_line_gray_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="用  苗  地:"
            android:textSize="13sp" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_address"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="13sp"
            tools:text="厦门" />


    </LinearLayout>

    <View style="@style/View_line_gray_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="截止日期:"
            android:textSize="13sp" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_quote_close_date"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="13sp"
            tools:text="2017-05-27" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!--<CheckBox-->
            <!--android:id="@+id/tv_quote_store_detail"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="32dp"-->
            <!--android:background="@drawable/rb_center_selecteor"-->
            <!--android:button="@null"-->
            <!--android:checked="true"-->
            <!--android:gravity="center_vertical|start"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:layout_margin="5dp"-->
            <!--android:text="采购商家信息"-->
            <!--android:textColor="@color/rb_left_selecteor" /> -->
            <Button
                android:id="@+id/tv_quote_store_detail"
                style="@style/radio_seedling_common"
                android:layout_margin="5dp"
                android:background="@drawable/rb_center_selecteor"

                android:padding="2dp"
                android:text="采购商家信息"
                android:textColor="@color/rb_left_selecteor"
                android:textSize="11sp" />

            <Button
                android:id="@+id/tv_quote_price_sug"
                style="@style/radio_seedling_common"
                android:layout_margin="5dp"
                android:background="@drawable/rb_center_select"
                android:checked="true"
                android:text="报价要求"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>