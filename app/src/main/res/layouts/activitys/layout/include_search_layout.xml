<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/include_search"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/search_bg"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:src="@drawable/search_icon" />

    <EditText
        android:id="@+id/et_program_serach_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请输入项目名称"
        android:imeOptions="actionSearch"
        android:paddingLeft="3dp"
        android:singleLine="true"
        android:textColorHint="@color/hint_text_color"
        android:textSize="@dimen/textSizeXX" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/sptv_program_do_search"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="搜索"
        android:textColor="@color/white"
        app:corner="5dp"
        app:right_bottom_corner="true"
        app:right_top_corner="true"
        app:solid="@color/main_color" />
</LinearLayout>
