<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/head_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px166"
    android:background="@color/trans">


    <!--<com.hldj.hmyg.widget.RoundRectImageView-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/px126"
        android:layout_height="@dimen/px126"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/company_head"
        app:civ_border_color="@color/white"
        app:civ_border_width="3px" />


    <TextView
        android:id="@+id/store_hzgys"
        android:layout_width="@dimen/px148"
        android:layout_height="@dimen/px38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:adjustViewBounds="true"
        android:background="@mipmap/store_hzgys"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:text="合作供应商"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="gone"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/brower_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/store_identity"
        android:layout_toRightOf="@+id/store_identity"
        android:gravity="center"
        android:padding="2dp"
        android:textSize="12sp"
        tools:text="合作供应商"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/bg_hzgys"
        android:layout_width="@dimen/px190"
        android:layout_height="@dimen/px52"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:background="@mipmap/bg_hzgys"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:layout_marginBottom="4dp"
        android:layout_alignBottom="@+id/logo"
        android:paddingLeft="14dp"
        android:textColor="#FDB504"
        android:textSize="11sp"
        android:visibility="gone"
        tools:text="合作供应商"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/store_identity"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/bg_hzgys"
        android:adjustViewBounds="true"
        android:src="@drawable/qyrz_new"
        android:visibility="gone"
        tools:visibility="visible"

        />


    <!--        android:background="@drawable/black_alpha_60_10"
    -->
    <LinearLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px63"
        android:layout_alignTop="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:orientation="horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeTitle"
        tools:text="金华永言苗木">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:textColor="@color/white"
            android:textSize="@dimen/textSizeTitle"

            tools:text="金华永言苗木"
            tools:textColor="@color/text_color333" />


    </LinearLayout>


</RelativeLayout>
