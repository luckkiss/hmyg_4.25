<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:minHeight="100dp"
        android:orientation="vertical"

        >

        <!--android:drawableRight="@drawable/close"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:paddingRight="15dp"-->

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_show_title"
            style="@style/super_main_conner_top"
            android:drawableRight="@drawable/close"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="选标情况"

            />

        <View
            style="@style/View_line_gray_1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />


        <LinearLayout
            android:id="@+id/conten"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="品种数量：10个"
                    android:textColor="@color/text_color333" />

            </LinearLayout>
        </LinearLayout>

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_ok_to_close"
            style="@style/super_main_conner_bottom"
            android:text="关闭"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>