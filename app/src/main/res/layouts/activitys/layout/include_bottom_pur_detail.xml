<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/View_line_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:gravity="center|start"
        android:text="采购标价"
        android:textColor="@color/orange" />

    <LinearLayout
        android:id="@+id/ll_purc_auto_add"
        style="@style/ll_padleft_15"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <RelativeLayout style="@style/ll_padleft_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="地址" />

        <TextView
            android:id="@+id/tv_purchase_city_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/downarrow"
            android:gravity="center"
            android:text="福建省厦门市" />


    </RelativeLayout>


    <!--动态 tag -->
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tfl_purchase_auto_add_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:max_select="0"
        android:paddingLeft="10dp"
        />


    <TextView
        android:id="@+id/tv_purchase_add_pic"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:drawableRight="@drawable/ic_right_icon"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="图片" />


    <com.zzy.common.widget.MeasureGridView
        android:id="@+id/gv_show_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:background="@color/white"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:scrollbars="none"
        >

    </com.zzy.common.widget.MeasureGridView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_purchase_remark"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="备注" />

        <EditText
            android:id="@+id/et_purchase_remark"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_purchase_commit"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_margin="10dp"
        android:background="@drawable/rb_left_select"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="提交报价"
        android:textColor="@color/white" />

</LinearLayout>