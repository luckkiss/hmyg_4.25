<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/View_line_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:gravity="center|start"
        android:text="采购报价"
        android:textColor="@color/orange" />

    <View style="@style/View_line_gray_1dp" />

    <LinearLayout
        android:id="@+id/ll_purc_auto_add"
        style="@style/ll_padleft_15"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <!--<View style="@style/View_line_gray_1dp" />-->



    <RelativeLayout style="@style/ll_padleft_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="苗源地" />

        <TextView
            android:id="@+id/tv_purchase_city_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_right_icon_new"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="未选择" />


    </RelativeLayout>


    <View style="@style/View_line_gray_1dp" />

    <!--动态 tag -->
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tfl_purchase_auto_add_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        app:max_select="0" />
    <View style="@style/View_line_gray_1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="图片"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_purchase_add_pic"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_right_icon_new"
            android:gravity="center_vertical|end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            tools:text="上传了3张图片" />


    </RelativeLayout>
    <View style="@style/View_line_gray_1dp" />

    <com.zzy.common.widget.MeasureGridView
        android:id="@+id/gv_show_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:background="@color/white"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:scrollbars="none"></com.zzy.common.widget.MeasureGridView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_purchase_remark"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="备注" />

        <EditText
            android:id="@+id/et_purchase_remark"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="@drawable/conner_edit"
            android:gravity="center_vertical"
            android:hint="请填写备注信息"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp" />

    </LinearLayout>

    <View style="@style/View_line_gray_1dp" />

    <TextView
        android:id="@+id/tv_purchase_commit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/rb_left_select"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="提交报价"
        android:textColor="@color/white" />

</LinearLayout>