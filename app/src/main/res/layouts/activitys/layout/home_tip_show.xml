<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conner_white_s">


    <com.coorchice.library.SuperTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="@dimen/simpleHeightHead"
        android:gravity="center"
        android:text="如何获取苗木推荐"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/trans_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:left_top_corner="true"
        app:right_top_corner="true"
        app:solid="@color/main_color"

        />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:padding="8dp"
        android:background="@color/white"
        android:text="昨日积分获取排名前3的供应商，将获得首页苗木推荐展示"
        android:textColor="@color/text_color333"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simpleHeightHead"
        android:background="@drawable/bg_top_line"
        android:gravity="center"
        android:text="关闭"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:left_bottom_corner="true"
        app:right_bottom_corner="true"
        app:solid="@color/trans" />


</android.support.constraint.ConstraintLayout>