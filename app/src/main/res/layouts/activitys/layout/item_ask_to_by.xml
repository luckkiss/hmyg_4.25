<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_line"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/space_text"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/space_text"
        android:text="1.花木园林科技"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/textSizeTitle" />

    <TextView
        android:id="@+id/shuliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title"
        android:layout_alignBottom="@+id/title"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/title"
        android:layout_toRightOf="@+id/title"
        android:text="200株"
        android:textColor="@color/main_color"
        android:textSize="@dimen/textSizeContent" />

    <!-- 报价数量 -->
    <CheckedTextView
        android:id="@+id/qubaojia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:checked="false"
        android:text="2条报价"
        android:textColor="@drawable/white_or_main_color"
        android:textSize="@dimen/textSizeContent" />


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:drawablePadding="4dp"
        android:text="￥300/株"
        android:textColor="@color/price_orige"
        android:textSize="@dimen/textSizeTitle" />


    <TextView
        android:id="@+id/space_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="8dp"
        android:text="脱肛高33cm"
        android:textColor="@color/text_color999" />


    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/space_text"
        android:layout_marginTop="8dp"
        android:text="福建厦门市园林集团"
        android:textColor="@color/text_color999" />


    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/city"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="更新时间:2019-05-16"
        android:textColor="@color/text_color999" />


    <!-- 报价数量 -->
    <CheckedTextView
        android:id="@+id/unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/qubaojia"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:text="3条未读"
        android:textColor="@color/text_color999"
        android:textSize="@dimen/textSizeContent"
        android:visibility="gone"
     />

    <include layout="@layout/item_bottom_tow_button" />

</RelativeLayout>

