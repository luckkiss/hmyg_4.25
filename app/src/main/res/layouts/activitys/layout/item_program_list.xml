<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/tv_program_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/main_color"
        android:gravity="center"
        android:minHeight="18dp"
        android:minWidth="18dp"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_program_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/textSizeXX"
        app:layout_constraintLeft_toRightOf="@+id/tv_program_pos"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextViewTextViewTTextViewTextViewTextViewTextViewTextViewTextViewvextView" />

    <TextView
        android:id="@+id/tv_program_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/main_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="代购或者直购" />

    <TextView
        android:id="@+id/tv_program_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="代购服务费："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_name" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="总发车："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_text" />

    <TextView
        android:id="@+id/tv_program_price_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="已采购金额："
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_program_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/tv_program_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_name" />

    <TextView
        android:id="@+id/tv_program_load_car_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/main_color"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_service_price"
        app:layout_goneMarginLeft="4dp"
        app:layout_goneMarginTop="4dp"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_program_alreay_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/price_orige"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/tv_program_price_num"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_load_car_count"
        app:layout_goneMarginLeft="4dp"
        app:layout_goneMarginTop="4dp"
        tools:visibility="visible" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_bg_ed"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_alreay_order" />


</android.support.constraint.ConstraintLayout>