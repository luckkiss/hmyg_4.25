<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    >


    <com.coorchice.library.SuperTextView
        android:id="@+id/pup_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="5dp"
        android:text="分享"
        android:textColor="@color/text_color333"
        android:textSize="14sp"
        android:visibility="visible"
        app:isShowState="true"
        app:state_drawable="@mipmap/share"
        app:state_drawable_height="16dp"
        app:state_drawable_mode="left"
        app:state_drawable_width="16dp" />
    <View
        style="@style/View_line_gray_1dp"
       />

    <com.coorchice.library.SuperTextView
        android:id="@+id/pup_subscriber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:paddingLeft="20sp"
        android:text="收藏"
        android:textColor="@color/text_color333"
        android:textSize="14sp"
        android:visibility="visible"
        app:isShowState="true"
        app:state_drawable="@drawable/love_selecter"
        app:state_drawable_height="16dp"
        app:state_drawable_mode="left"
        app:state_drawable_width="16dp" />


    <View
        style="@style/View_line_gray_1dp"
        />

    <com.coorchice.library.SuperTextView
        android:id="@+id/pup_show_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:paddingLeft="20sp"
        android:text="店铺"
        android:textColor="@color/text_color333"
        android:textSize="14sp"
        android:visibility="visible"
        app:isShowState="true"
        app:state_drawable="@mipmap/store"
        app:state_drawable_height="16dp"
        app:state_drawable_mode="left"
        app:state_drawable_width="16dp" />

    <View
        style="@style/View_line_gray_1dp"
         />
    <com.coorchice.library.SuperTextView
        android:id="@+id/pup_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:paddingLeft="20sp"
        android:text="删除"
        android:textColor="@color/text_color333"
        android:textSize="14sp"
        android:visibility="visible"
        app:isShowState="true"
        app:state_drawable="@mipmap/delete"
        app:state_drawable_height="16dp"
        app:state_drawable_mode="left"
        app:state_drawable_width="16dp" />


</LinearLayout>

