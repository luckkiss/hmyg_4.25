<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"

    android:background="@drawable/bg_bottom_line"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@+id/view2"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/tv_program_purch_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/main_color"
        android:gravity="center"
        android:minHeight="18dp"
        android:minWidth="18dp"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:text="供应商1"
        android:textColor="@color/text_color333"
        android:textSize="@dimen/textSizeXX"
        app:layout_constraintLeft_toRightOf="@+id/tv_program_purch_pos"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView " />

    <TextView
        android:id="@+id/tv_ycy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="已采用：5个品种"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pzsl"
        tools:text="spacetext" />


    <ImageView
        android:id="@+id/tv_right_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/arrow_right_eq"
        android:gravity="center"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="￥\n14000111122" />

    <TextView
        android:id="@+id/tv_pzsl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="报价品种数量：5个"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/tv_myd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="start"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ycy"
        tools:text="山  山  福建 福州建山  山  福建 福州建 福州山  山  福建 福州建 福州山  山  福建 福州建 福州 福州" />


</android.support.constraint.ConstraintLayout>