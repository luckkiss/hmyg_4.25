<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.coorchice.library.SuperTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tv_fr_item_state"
                android:gravity="center|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/textSizeTitle"
                tools:text="百花鸡蛋花" />
            <!--                android:textColor="@color/main_color"
-->

            <TextView
                android:id="@+id/tv_fr_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="6dp"
                android:padding="3dp"
                android:textColor="@color/main_color"
                android:textSize="11sp"
                android:visibility="visible"
                tools:text="2条报价" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.coorchice.library.SuperTextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="截止时间:"
                    android:textSize="12sp" />

                <com.coorchice.library.SuperTextView
                    android:id="@+id/close_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:minHeight="21dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    tools:text="2018-04-21 10:40" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.coorchice.library.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center|end"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="求购数量:"
                android:textSize="12sp" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/quote_num"
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingRight="5dp"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                tools:text="100" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.coorchice.library.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center|end"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="规格要求:"
                android:textSize="12sp" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/space_text"
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingRight="5dp"
                android:textSize="12sp"
                tools:text="地径:15(出土量) 高度：300 " />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.coorchice.library.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center|end"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="用苗地:"
                android:textSize="12sp" />

            <com.coorchice.library.SuperTextView

                android:id="@+id/city"

                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingRight="5dp"
                android:textSize="12sp"
                tools:text="厦门" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.coorchice.library.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center|end"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="求购描述:"
                android:textSize="12sp" />


            <com.coorchice.library.SuperTextView
                android:id="@+id/marks"
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingRight="5dp"
                android:textSize="12sp"
                tools:text="假植苗" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.coorchice.library.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center|end"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="图片要求:"
                android:textSize="12sp" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/yaoqiu"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingRight="5dp"
                android:textSize="12sp"
                app:isShowState="true"
                app:paddingEnd="10dp"
                app:state_drawable_height="20dp"
                app:state_drawable_mode="right"
                app:state_drawable_width="20dp"
                tools:text="需要上传图片" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>