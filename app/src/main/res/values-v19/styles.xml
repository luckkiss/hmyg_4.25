<resources>


    <style name="base_store_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>


    <!--6.0之后 提供亮色状态栏，，能黑白交换-->
    <style name="e_activity_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowLightStatusBar">true</item>-->
        <!--&lt;!&ndash;<item name="colorPrimaryDark">@android:color/transparent</item>&ndash;&gt;-->
        <item name="android:windowIsTranslucent">true</item>
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--使状态栏，导航栏可绘制-->
        <!--&lt;!&ndash;<item name="fitsSystemWindows">true</item>&ndash;&gt;-->
        <!--<item name="android:statusBarColor">@color/transparent</item>-->
    </style>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- 无ActionBar -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>

        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:fitsSystemWindows">false</item>-->
    </style>

    <style name="AppMainTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <!--<style name="FullScreenTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">-->
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/ic_splash_3_0</item>
        <item name="android:windowFullscreen">true</item>


    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <!-- API 19 theme customizations can go here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


</resources>