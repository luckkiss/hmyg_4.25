<com.yunpay.app.KeyboardLayout3 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.hldj.hmyg.saler.SaveSeedlingActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y34"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="快速记苗"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x18" />

        <TextView
            android:id="@+id/id_tv_edit_all"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/green_btn_selector"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/main_color"
            android:textSize="16dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_bak" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/gray_bg">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y8"
                android:background="@color/white"
                android:orientation="vertical">

                <com.zzy.common.widget.MeasureGridView
                    android:id="@+id/publish_flower_info_gv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:background="@color/white"
                    android:listSelector="@color/transparent"
                    android:numColumns="4"
                    android:scrollbars="none" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_id_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/y8"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x12"
                android:textSize="@dimen/x15"
                android:visibility="gone"
                tools:text="编号：M325048"
                tools:visibility="visible" />


            <LinearLayout
                android:id="@+id/ll_02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/seller_redstar"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="品名"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/conner_edit"
                        android:gravity="center_vertical"
                        android:hint="请输入品名"
                        android:imeOptions="actionNext"
                        android:padding="5dp"
                        android:paddingLeft="@dimen/x12"
                        android:singleLine="true"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="单价"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/conner_edit"
                        android:gravity="center_vertical"
                        android:hint="单位：元"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:paddingLeft="@dimen/x12"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_FloorPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/seller_redstar"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="底价"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:id="@+id/et_FloorPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="（单位：元）"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/x12"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="数量"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:id="@+id/et_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"

                        android:layout_weight="1"
                        android:background="@drawable/conner_edit"
                        android:gravity="center_vertical"
                        android:hint="请输入数量"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="8"
                        android:padding="5dp"
                        android:paddingLeft="@dimen/x12"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="规   格："
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_minSpec"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x33"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/conner_edit"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/hint_text_color"

                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x2"
                    android:text="---"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_maxSpec"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x33"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/conner_edit"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/x15" />
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:scrollbars="none"
                android:visibility="gone">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:visibility="visible">


                    <View
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />


                    <RadioButton
                        android:id="@+id/rb_auto_add_left_ctl"
                        style="@style/simple_radio_bg"
                        android:layout_marginRight="-1dp"
                        android:text="出土量" />


                    <RadioButton
                        android:id="@+id/rb_auto_add_center0_1"
                        style="@style/simple_radio_bg"
                        android:layout_marginLeft="-2dp"
                        android:text="0.1M量" />


                    <RadioButton
                        android:id="@+id/rb_auto_add_center0_3"
                        style="@style/simple_radio_bg"
                        android:layout_marginLeft="-2dp"
                        android:text="0.3M量" />

                    <RadioButton
                        android:id="@+id/rb_auto_add_center1_0"
                        style="@style/simple_radio_bg"
                        android:layout_marginLeft="-2dp"
                        android:text="1.0M量" />

                    <RadioButton
                        android:id="@+id/rb_auto_add_center1_2"
                        style="@style/simple_radio_bg"
                        android:layout_marginLeft="-2dp"
                        android:text="1.2M量" />

                    <RadioButton
                        android:id="@+id/rb_auto_add_right"
                        style="@style/simple_radio_bg"
                        android:layout_marginLeft="-2dp"
                        android:text="1.3M量" />

                    <include layout="@layout/radio" />


                    <View
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                </RadioGroup>


            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:fillViewport="true"
                android:padding="6dp"
                android:scrollbars="none">

                <RadioGroup
                    android:id="@+id/radio_group_auto_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <!--<include layout="@layout/radio" />-->

                    <!--<include layout="@layout/radio" />-->

                </RadioGroup>


            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="最小规格"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingLeft="@dimen/x12"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="最大规格"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingLeft="@dimen/x12"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="高   度："
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x33"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/conner_edit"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x2"
                    android:text="---"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_maxHeight"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x33"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/conner_edit"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/x15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y28"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="冠   幅："
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:id="@+id/et_crown"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/x33"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/conner_edit"
                        android:gravity="center"
                        android:hint="厘米"
                        android:inputType="number"
                        android:maxLength="7"
                        android:padding="@dimen/x2"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/x15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="@dimen/x2"
                        android:text="---"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:id="@+id/et_maxCrown"
                        android:layout_width="0.0dip"
                        android:layout_height="@dimen/x33"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/conner_edit"
                        android:gravity="center"
                        android:hint="厘米"
                        android:inputType="number"
                        android:maxLength="7"
                        android:padding="@dimen/x2"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_05"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_my_list"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/x7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/seller_redstar"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="苗源地址"
                        android:textSize="@dimen/x15" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x15" />

                    <ImageView
                        style="@style/more_triangle"
                        android:background="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/list_item_adress"
                layout="@layout/list_item_adress_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feedback_content_edittext_shape"
                android:minHeight="@dimen/y34"
                android:orientation="horizontal"
                android:padding="1px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="备注"
                        android:textSize="@dimen/x15" />

                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/conner_edit"
                        android:gravity="center_vertical"
                        android:hint="请输入备注"
                        android:imeOptions="actionNext"
                        android:maxLines="3"
                        android:padding="5dp"
                        android:paddingLeft="@dimen/x12"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/x15" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:orientation="horizontal">

                <com.coorchice.library.SuperTextView
                    android:id="@+id/iv_publish_quick"
                    style="@style/bottom_button_white"
                    android:text="发布到商城"

                    android:visibility="gone"
                    tools:visibility="visible" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/text_colorccc" />

                <com.coorchice.library.SuperTextView
                    android:id="@+id/iv_ready_save"
                    style="@style/bottom_button_white"

                    android:text="保存并退出"

                    />

                <Button
                    android:id="@+id/save"
                    style="@style/bottom_button_green"
                    android:text="保存并继续" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</com.yunpay.app.KeyboardLayout3>