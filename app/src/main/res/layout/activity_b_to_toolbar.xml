<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y32"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_b_search"
                    android:layout_width="@dimen/x265"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/y5"
                    android:layout_toLeftOf="@+id/iv_view_type"
                    android:background="@drawable/search_edit_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x17"
                            android:layout_height="@dimen/x17"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/seller_search" />

                        <TextView
                            android:id="@+id/tv_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="找苗/报价/店铺"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/x14" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_view_type"
                    android:layout_width="@dimen/y18"
                    android:layout_height="@dimen/y18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x10"
                    android:src="@drawable/selector_list_or_grid" />
            </RelativeLayout>


        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y24"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white">

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_b_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="筛选"
                app:isShowState="true"
                app:state_drawable="@drawable/icon_seller_arrow5"
                app:state_drawable_height="6dp"
                app:state_drawable_mode="center"
                app:state_drawable_padding_left="24dp"
                app:state_drawable_width="12dp" />

            <ImageView
                android:layout_width="2px"
                android:layout_height="15.0dip"
                android:layout_gravity="center_vertical"
                android:background="@color/gray" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_b_sort"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="排序"
                app:isShowState="true"
                app:state_drawable="@drawable/icon_seller_arrow5"
                app:state_drawable_height="6dp"
                app:state_drawable_mode="center"
                app:state_drawable_padding_left="24dp"
                app:state_drawable_width="12dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <me.kaede.tagview.TagView
                android:id="@+id/tagview_b_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                app:lineMargin="5dp"
                app:tagMargin="3dp"
                app:textPaddingBottom="3dp"
                app:textPaddingLeft="10dp"
                app:textPaddingRight="10dp"
                app:textPaddingTop="3dp"/>


            <!--<View-->
            <!--android:id="@+id/id_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="@color/main_color" />-->


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_bg" />


    </android.support.design.widget.AppBarLayout>


    <com.hldj.hmyg.buyer.weidet.CoreRecyclerView
        android:id="@+id/core_rv_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</android.support.design.widget.CoordinatorLayout>