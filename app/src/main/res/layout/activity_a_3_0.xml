    <!--com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <com.hldj.hmyg.widget.swipeview.MySwipeRefreshLayout
            android:id="@+id/swipe_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loadmore_enable="false"
            app:pull_refresh_enable="true">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/rotate_header_scroll_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.javis.ab.view.AbSlidingPlayView
                        android:id="@+id/viewPager_menu"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:background="#00000000"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.autoscrollview.widget.AutoScrollViewPager
                            android:id="@+id/view_pager"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                        <com.autoscrollview.widget.indicator.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/view_pager"
                            android:layout_centerHorizontal="true"
                            android:padding="8.0dip" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_bg" />

                        <LinearLayout
                            android:id="@+id/ll_fenlei"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">


                            <com.coorchice.library.SuperTextView
                                android:id="@+id/stv_home_1"
                                style="@style/home_types"
                                android:text="苗木管理"
                                app:state_drawable="@mipmap/home_mmgl" />

                            <com.coorchice.library.SuperTextView
                                android:id="@+id/stv_home_2"
                                style="@style/home_types"
                                android:text="采购报价"
                                app:state_drawable="@drawable/home_kuaisubj" />

                            <com.coorchice.library.SuperTextView
                                android:id="@+id/stv_home_3"
                                style="@style/home_types"
                                android:text="成交公告"
                                app:state_drawable="@drawable/home_chengjiaogg" />

                            <com.coorchice.library.SuperTextView
                                android:id="@+id/stv_home_4"
                                style="@style/home_types"
                                android:text="新闻资讯"
                                app:state_drawable="@drawable/home_xinwenzx" />


                            <com.jarvis.MyView.MyGridView
                                android:id="@+id/gd_00"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:horizontalSpacing="@dimen/y1"
                                android:numColumns="4"
                                android:padding="@dimen/y5"
                                android:verticalSpacing="@dimen/y1"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_bg" />


                        <com.jarvis.MyView.MyGridView
                            android:id="@+id/gd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gray_bg"
                            android:horizontalSpacing="@dimen/y1"
                            android:numColumns="2"
                            android:verticalSpacing="@dimen/y1"
                            android:visibility="gone" />
                    </LinearLayout>


                    <View
                        style="@style/View_line_gray"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_home_left"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/home_cj_gg" />

                        <!--android:layout_margin="5dp"-->
                        <com.hldj.hmyg.widget.UPMarqueeView
                            android:id="@+id/upview1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@+id/iv_home_left" />


                    </RelativeLayout>


                    <!--如果没有采购，隐藏本项目-->
                    <LinearLayout
                        android:id="@+id/ll_caigou_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <View style="@style/View_line_gray" />

                        <com.coorchice.library.SuperTextView
                            android:id="@+id/home_title_first"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="start|center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/text_color333"
                            android:textSize="17sp"
                            app:isShowState="true"
                            app:state_drawable="@drawable/home_more"
                            app:state_drawable_height="13dp"
                            app:state_drawable_mode="right"
                            app:state_drawable_padding_left="-15dp"
                            app:state_drawable_width="50dp"
                            tools:text="最新采购" />

                        <View style="@style/View_line_gray_1px" />

                        <com.jarvis.MyView.MyListView
                            android:id="@+id/lv_00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:descendantFocusability="blocksDescendants"
                            android:divider="@color/gray_bg_ed"
                            android:dividerHeight="3px"
                            android:headerDividersEnabled="true"
                            app:dividerHeight="3px" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_tuijian_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View style="@style/View_line_gray" />

                        <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:background="@color/white"-->
                        <!--android:orientation="vertical"-->
                        <!--android:paddingLeft="10dp">-->
                        <!--&lt;!&ndash;此处为热门商家  @drawable/home_merchants  &ndash;&gt;-->

                        <!--&lt;!&ndash;成交公告&ndash;&gt;-->
                        <!--<TextView-->
                        <!--android:id="@+id/home_title_second"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:gravity="center"-->
                        <!--android:textColor="@color/text_color333"-->
                        <!--android:textSize="16sp"-->
                        <!--tools:text="推荐资源" />-->


                        <!--<ImageView-->
                        <!--android:id="@+id/iv_home_more_tj"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:padding="9dp"-->
                        <!--android:scaleType="fitCenter"-->
                        <!--android:src="@drawable/home_more" />-->
                        <!--</RelativeLayout>-->
                        <com.coorchice.library.SuperTextView
                            android:id="@+id/home_title_second"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="start|center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/text_color333"
                            android:textSize="17sp"
                            app:isShowState="true"
                            app:state_drawable="@drawable/home_more"
                            app:state_drawable_height="13dp"
                            app:state_drawable_mode="right"
                            app:state_drawable_padding_left="-15dp"
                            app:state_drawable_width="50dp"
                            tools:text="推荐资源" />

                        <View style="@style/View_line_gray_1dp" />

                        <com.jarvis.MyView.MyListView
                            android:id="@+id/lv_00_store"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:descendantFocusability="blocksDescendants"
                            android:divider="@null" />
                    </LinearLayout>


                    <View style="@style/View_line_gray" />


                    <com.coorchice.library.SuperTextView
                        android:id="@+id/home_title_third"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_color333"
                        android:textSize="17sp"
                        app:isShowState="true"
                        app:state_drawable="@drawable/home_more"
                        app:state_drawable_height="13dp"
                        app:state_drawable_mode="right"
                        app:state_drawable_padding_left="-15dp"
                        app:state_drawable_width="50dp"
                        tools:text="热门商家" />


                    <View style="@style/View_line_gray_1dp" />

                    <RelativeLayout
                        android:id="@+id/con0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingBottom="@dimen/y8" />


                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </com.hldj.hmyg.widget.swipeview.MySwipeRefreshLayout>
