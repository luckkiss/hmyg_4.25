<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <include layout="@layout/activity_a_top_toolbar"></include>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_bak" />

        <me.hwang.library.widgit.SmartRefreshLayout
            android:id="@+id/rotate_header_web_view_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f1f1"
            app:enablePullDown="true"
            app:enablePullUp="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/swipe_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:id="@+id/rotate_header_scroll_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/gray_bg"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.javis.ab.view.AbSlidingPlayView
                                android:id="@+id/viewPager_menu"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:background="#00000000"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <com.autoscrollview.widget.AutoScrollViewPager
                                    android:id="@+id/view_pager"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    />

                                <com.autoscrollview.widget.indicator.CirclePageIndicator
                                    android:id="@+id/indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/view_pager"
                                    android:layout_centerHorizontal="true"
                                    android:padding="8.0dip" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/iv_fuwu"
                                        android:layout_width="30.0dip"
                                        android:layout_height="70.0dip"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/shouye_fuwu3" />

                                    <com.jarvis.MyView.MyGridView
                                        android:id="@+id/gd_01"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"
                                        android:horizontalSpacing="@dimen/y1"
                                        android:numColumns="4"
                                        android:padding="@dimen/y5"
                                        android:verticalSpacing="@dimen/y1" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray_bg" />

                                <LinearLayout
                                    android:id="@+id/ll_fenlei"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white">

                                    <ImageView
                                        android:id="@+id/iv_fenlei"
                                        android:layout_width="30.0dip"
                                        android:layout_height="70.0dip"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/shouye_fenlei3" />

                                    <com.jarvis.MyView.MyGridView
                                        android:id="@+id/gd_00"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"
                                        android:horizontalSpacing="@dimen/y1"
                                        android:numColumns="4"
                                        android:padding="@dimen/y5"
                                        android:verticalSpacing="@dimen/y1" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray_bg" />


                                <com.jarvis.MyView.MyGridView
                                    android:id="@+id/gd"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/gray_bg"
                                    android:horizontalSpacing="@dimen/y1"
                                    android:numColumns="2"
                                    android:verticalSpacing="@dimen/y1" />
                            </LinearLayout>


                            <View style="@style/View_line_gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">
                                <!--成交公告-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="最新：2017/4/18 关于'采购单（P0051）'的成交公告 "
                                    android:textColor="@color/black_de"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="最新：2017/4/18 关于'采购单（P0051）'的成交公告 "
                                    android:textColor="@color/black_de"
                                    android:textSize="13sp" />


                            </LinearLayout>


                            <!--如果没有采购，隐藏本项目-->
                            <LinearLayout
                                android:id="@+id/ll_caigou_parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <View style="@style/View_line_gray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:orientation="vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp">
                                    <!--此处为热门商家  @drawable/home_merchants  -->

                                    <!--成交公告-->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="采购"
                                        android:textColor="@color/black_de"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="end"
                                        android:gravity="center"
                                        android:text="更多>>>"
                                        android:textSize="12sp" />
                                </RelativeLayout>

                                <com.jarvis.MyView.MyListView
                                    android:id="@+id/lv_00"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/ll_tuijian_parent"
                                >

                                <View style="@style/View_line_gray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:orientation="vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp">
                                    <!--此处为热门商家  @drawable/home_merchants  -->

                                    <!--成交公告-->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="推荐资源"
                                        android:textColor="@color/black_de"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="end"
                                        android:gravity="center"
                                        android:text="更多>>>"
                                        android:textSize="12sp" />
                                </RelativeLayout>


                                <com.jarvis.MyView.MyListView
                                    android:id="@+id/lv_00_store"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white" />
                            </LinearLayout>


                            <View style="@style/View_line_gray" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">
                                <!--此处为热门商家  @drawable/home_merchants  -->

                                <!--成交公告-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="热门商家"
                                    android:textColor="@color/black_de"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="end"
                                    android:gravity="center"
                                    android:text="更多>>>"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/con0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:paddingBottom="@dimen/y8">


                            </RelativeLayout>


                        </LinearLayout>
                    </ScrollView>

                </android.support.v4.widget.SwipeRefreshLayout>
                <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/top_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginBottom="40dip"-->
                <!--android:layout_marginRight="10dip"-->
                <!--android:clickable="true"-->
                <!--android:src="@drawable/top_btn_bg"-->
                <!--app:background="@color/main_color"-->
                <!--app:backgroundTint="@color/main_color"-->
                <!--app:fabSize="normal"-->
                <!--app:rippleColor="@color/main_color" />-->

                <Button
                    android:id="@+id/top_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/top_btn_bg"
                    android:gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>
        </me.hwang.library.widgit.SmartRefreshLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>