<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_ed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/include"
            layout="@layout/toolbar_3_0" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simpleHeightContent"
            android:background="@color/white">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/seller_redstar"
                android:minWidth="70dp"
                android:paddingLeft="12dp"
                android:text="苗圃名称"
                android:textSize="@dimen/textSizeContent" />

            <EditText
                android:id="@+id/et_aaa_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/left"
                android:background="@color/trans"
                android:hint="字数不超过20个字"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/textSizeContent"

                />


        </RelativeLayout>


        <TextView
            android:id="@+id/sclxfs_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/simpleHeightContent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/lxfs_title"
            android:textSize="@dimen/textSizeContent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simpleHeightContent"
            android:background="@drawable/bg_bottom_line">

            <TextView
                android:id="@+id/left1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="70dp"
                android:paddingLeft="12dp"
                android:text="联系人"
                android:textSize="@dimen/textSizeContent" />

            <EditText
                android:id="@+id/et_aaa_contactName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/left1"
                android:background="@color/trans"
                android:hint="请输入联系人"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/textSizeContent" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simpleHeightContent"
            android:background="@color/white">

            <TextView
                android:id="@+id/left2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/seller_redstar"
                android:minWidth="70dp"
                android:paddingLeft="12dp"
                android:text="联系电话"
                android:textSize="@dimen/textSizeContent" />

            <EditText
                android:id="@+id/et_aaa_contactPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/left2"
                android:background="@color/trans"
                android:inputType="phone"
                android:hint="请输入联系电话"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/textSizeContent" />


        </RelativeLayout>


        <!-- 苗圃联系方式 -->

        <TextView
            android:id="@+id/lxfs_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/simpleHeightContent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="-"
            android:textSize="@dimen/textSizeContent" />
        <!--    android:text="@string/lxdh_desc"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simpleHeightContent"
            android:background="@drawable/bg_bottom_line">

            <TextView
                android:id="@+id/left11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="70dp"
                android:paddingLeft="12dp"
                android:text="联系人"
                android:textSize="@dimen/textSizeContent" />

            <EditText
                android:id="@+id/et_aaa_nurseryContactName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/left11"
                android:background="@color/trans"
                android:hint="请输入联系人"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/textSizeContent" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simpleHeightContent"
            android:background="@color/white">

            <TextView
                android:id="@+id/left22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="70dp"
                android:paddingLeft="12dp"
                android:text="联系电话"
                android:textSize="@dimen/textSizeContent" />

            <EditText
                android:id="@+id/et_aaa_nurseryContactPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/left22"
                android:background="@color/trans"
                android:inputType="phone"
                android:hint="请输入联系电话"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/textSizeContent" />


        </RelativeLayout>

        <!-- 苗圃联系方式 -->

        <com.hldj.hmyg.widget.MyOptionItemView
            android:id="@+id/tv_aaa_area"
            style="@style/option_view_style"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_bottom_line"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            app:left_src="@drawable/seller_redstar"
            app:left_text="所在区域"
            app:right_src="@drawable/arrow_right_eq"
            app:right_text="厦门市 思明区" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_bottom_line"
            android:minHeight="@dimen/textSizeContent">

            <TextView
                android:id="@+id/left3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/et_aaa_detailAddress"
                android:layout_marginTop="8dp"
                android:minWidth="70dp"
                android:paddingLeft="12dp"
                android:text="详细地址"
                android:textSize="@dimen/textSizeContent" />

            <EditText
                android:id="@+id/et_aaa_detailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/left3"
                android:background="@color/trans"
                android:gravity="start"
                android:hint="请输入详细地址信息"
                android:padding="8dp"
                android:textColorHint="@color/hint_text_color"
                android:textSize="@dimen/textSizeContent" />


        </RelativeLayout>


        <com.hldj.hmyg.widget.MyOptionItemView
            android:id="@+id/tv_aaa_loac"
            style="@style/option_view_style"
            android:paddingRight="6dp"
            app:left_text="地图标注"
            app:right_src="@drawable/arrow_right_eq"
            app:right_text="点击智能定位" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delete"
                style="@style/save_bottom"
                android:layout_width="0dp"
                android:layout_height="@dimen/px88"
                android:layout_marginTop="16dp"
                android:layout_weight="3"
                android:background="@drawable/round_rectangle_gray_bg"
                android:text="删除苗圃"
                android:textColor="@color/text_color999"
                android:textSize="@dimen/textSizeTitle" />


            <TextView
                android:id="@+id/tv_save"
                style="@style/save_bottom"
                android:layout_width="0dp"
                android:layout_height="@dimen/px88"
                android:layout_marginTop="8dp"
                android:layout_weight="7"
                android:background="@drawable/round_textview_main_color_bg"
                android:text="保存"
                android:textSize="@dimen/textSizeTitle" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>