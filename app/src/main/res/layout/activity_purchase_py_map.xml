<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:segmentedgroup="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y34"
        android:background="@color/white">


        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            app:sc_unchecked_tint_color="@color/white"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="5dp"
            segmentedgroup:sc_tint_color="@color/main_color">

            <RadioButton
                android:id="@+id/button31"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购中" />

            <RadioButton
                android:id="@+id/button32"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待采购" />

            <RadioButton
                android:id="@+id/button33"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史采购" />
        </info.hoang8f.android.segmented.SegmentedGroup>


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/id_tv_edit_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="18dp"
            android:text="●●●"
            android:textColor="@color/main_color"
            android:textSize="7dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/ll_show_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.weavey.loading.lib.LoadingLayout
                android:id="@+id/listview_show_3_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <me.maxwin.view.XListView
                    android:id="@+id/listview_show_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff0f0f0" />

            </com.weavey.loading.lib.LoadingLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_show_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_bak" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:background="@color/main_color"
                android:orientation="horizontal"
                android:padding="1px"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/x7">

                    <ImageView
                        style="@style/more_triangle"
                        android:layout_marginLeft="10.0dip"
                        android:src="@drawable/xiaoxiti" />

                    <TextView
                        android:id="@+id/tv_xiaoxitishi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/iv_close"
                        style="@style/more_triangle"
                        android:background="@drawable/xiaoxitishi_x2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40.0dp"
                    android:layout_weight="1.0">

                    <com.astuetz.PagerSlidingTabStrip
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF" />
                </RelativeLayout>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/fl_list"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <com.weavey.loading.lib.LoadingLayout
                    android:id="@+id/listview_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:isFirstVisible="true">

                    <me.maxwin.view.XListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff0f0f0"
                        android:divider="@color/gray_bg_ed"
                        android:dividerHeight="20px" />
                </com.weavey.loading.lib.LoadingLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_type"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.weavey.loading.lib.LoadingLayout
                    android:id="@+id/lv_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <me.maxwin.view.XListView
                        android:id="@+id/lv"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#fff0f0f0"

                        />

                </com.weavey.loading.lib.LoadingLayout>

                <TextView
                    android:id="@+id/dialog"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_gravity="center"
                    android:background="@drawable/show_head_toast_bg"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="30.0dip"
                    android:visibility="invisible" />

                <com.example.sortlistview.SideBar
                    android:id="@+id/sidrbar"
                    android:layout_width="30.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right|center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>