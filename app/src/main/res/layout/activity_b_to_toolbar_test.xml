<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/top_padding_statu"
        android:visibility="visible"
        app:elevation="0dp">

        <include layout="@layout/activity_b_to_toolbar_include" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_bg" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white">

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_b_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="筛选"
                app:isShowState="true"
                app:state_drawable="@drawable/ic_arrow_down"
                app:state_drawable_height="6dp"
                app:state_drawable_mode="center"
                app:state_drawable_padding_left="24dp"
                app:state_drawable_width="10dp" />

            <View style="@style/View_line_vertical" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_b_sort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="排序"
                app:isShowState="true"
                app:state_drawable="@drawable/ic_arrow_down"
                app:state_drawable_height="6dp"
                app:state_drawable_mode="center"
                app:state_drawable_padding_left="24dp"
                app:state_drawable_width="10dp" />


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_bg" />

        <!--<LinearLayout-->
            <!--android:id="@+id/ll_sor_contennt"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/bg_top_line"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_gravity="center_vertical">-->

            <me.kaede.tagview.TagView
                android:id="@+id/tagview_b_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_bg_ed"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="6dp"
                app:lineMargin="5dp"
                app:tagMargin="3dp"
                app:textPaddingBottom="5dp"
                app:textPaddingLeft="10dp"
                app:textPaddingRight="10dp"
                app:textPaddingTop="5dp" />


            <!--<View-->
            <!--android:id="@+id/id_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="@color/main_color" />-->


        <!--</LinearLayout>-->





    </android.support.design.widget.AppBarLayout>


    <com.hldj.hmyg.buyer.weidet.CoreHeadRecyclerView
        android:id="@+id/core_rv_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <ImageView
        android:id="@+id/iv_b_top"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/top_btn_bg"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_b_publish"
        style="@style/iv_home_publish"
        android:layout_gravity="right|bottom" />


</android.support.design.widget.CoordinatorLayout>