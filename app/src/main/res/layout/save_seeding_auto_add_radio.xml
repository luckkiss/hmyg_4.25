<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/rl_seeding_commom"
    android:layout_height="@dimen/y61">


    <TextView
        android:id="@+id/tv_auto_add_left1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="地径"
        android:textSize="@dimen/x15" />

    <TextView
        android:id="@+id/tv_auto_add_left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_auto_add_left1"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_auto_add_left1"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/x13"

        />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/y14"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <!--android:paddingLeft="@dimen/x14"-->
        <!--android:paddingRight="@dimen/x14"-->

        <EditText
            android:id="@+id/et_auto_add_min"
            style="@style/edit_seeding_imput" />

        <TextView style="@style/text_Seeding_line" />

        <EditText
            android:id="@+id/et_auto_add_max"
            style="@style/edit_seeding_imput" />


    </LinearLayout>

    <TextView
        android:id="@+id/et_auto_add_unit"
        style="@style/text_seeding_cm" />


    <RadioGroup
        android:id="@+id/radio_group_auto_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:visibility="visible">


        <RadioButton
            android:id="@+id/rb_auto_add_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg2"
            android:button="@null"
            android:checked="true"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="0.3m量"
            android:textColor="@color/rb_left_selecteor"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <RadioButton
            android:id="@+id/rb_auto_add_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:background="@drawable/tag_bg2"
            android:button="@null"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="1.0m量"
            android:textColor="@color/rb_left_selecteor"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <RadioButton
            android:id="@+id/rb_auto_add_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dp"
            android:background="@drawable/tag_bg2"
            android:button="@null"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="1.3M量"
            android:textColor="@color/rb_left_selecteor"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible">

        </RadioButton>


    </RadioGroup>


</RelativeLayout>
