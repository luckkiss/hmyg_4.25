<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="600dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/t_emptyImageIcon"
                android:layout_width="@dimen/empty_width"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="品种暂未收录,点击去提交(花花木)?"

                />

            <TextView
                android:id="@+id/t_emptyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_emptyImageIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:gravity="center"
                style="@style/save_bottom"
                android:text="提交品种名称"
                android:textColor="@android:color/white"
                android:paddingLeft="8dp"

                />

            <TextView
                style="@style/save_bottom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_emptyTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="立即报价"
                android:textSize="14sp"
                android:visibility="gone" />


        </RelativeLayout>
    </FrameLayout>
</LinearLayout>