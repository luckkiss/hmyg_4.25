<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y34"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="采购详情"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x18" />


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="[乔木]" />


        <TextView
            android:id="@+id/tv_use_addr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:text="白蜡"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="乔木规格:" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_close_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="20170524" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="种植类型:" />

        <com.coorchice.library.SuperTextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="假植苗" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="采购数量" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="300株" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="用苗地:" />

        <com.coorchice.library.SuperTextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="厦门" />


    </LinearLayout>


    <View style="@style/View_line_green" />

    <!--分割线-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="截止日期:" />

        <com.coorchice.library.SuperTextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical|start"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="2017-05-27" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.coorchice.library.SuperTextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="采购商家信息" />

            <com.coorchice.library.SuperTextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical|start"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="报价要求" />

        </LinearLayout>
    </LinearLayout>


    <com.hldj.hmyg.buyer.weidet.CoreRecyclerView
        android:id="@+id/recycle_quit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.hldj.hmyg.buyer.weidet.CoreRecyclerView>


</LinearLayout>