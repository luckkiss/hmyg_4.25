<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_broker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r_o_white"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:paddingTop="8dp"
      >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2.0dip"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/agreement_checkbox_bg"
                    android:checked="false"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14.0sp"
                    tools:text="海峡***采购单（65656）" />

                <TextView
                    android:id="@+id/tv_ac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:gravity="center_vertical"
                android:paddingBottom="2.5dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="2.5dip"
                android:singleLine="true"
                android:textColor="@color/orange"
                android:textSize="12sp"
                tools:text="厦门" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="12.0sp"
                android:visibility="visible"
                tools:text="种植类型：" />

            <TextView
                android:id="@+id/tv_021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="12.0sp"
                android:visibility="visible"
                tools:text="地栽苗，移植苗" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="12.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/tv_09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="14.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:paddingLeft="10.0dip">
            <!--规格-->
            <TextView
                android:id="@+id/tv_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5A5A5A"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="8dp"
            android:background="@color/gray_bg_ed"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingBottom="4.5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="12.0sp"
                    tools:text="已有1条报价"

                    />

                <TextView
                    android:id="@+id/tv_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#5A5A5A"
                    android:textSize="12.0sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_caozuo01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/green_btn_selector"
                android:gravity="center_vertical"
                android:paddingBottom="2.5dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="2.5dip"
                android:singleLine="true"
                android:text="马上报价"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="33dp" />
        </RelativeLayout>

        <com.zzy.common.widget.MeasureListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/tv_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#5A5A5A"
                android:textSize="12.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_caozuo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_margin="5.0dip"
                android:layout_weight="5.0"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:textColor="@color/red"
                android:textSize="11.0sp" />

            <TextView
                android:id="@+id/tv_caozuo02"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/green_btn_selector"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:textColor="@color/main_color"
                android:textSize="11.0sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_caozuo03"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/green_btn_selector"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:text="我要报价"
                android:textColor="@color/main_color"
                android:textSize="11.0sp" />
        </LinearLayout>


        <!--<include layout="@layout/item_purchase_first_cons" />-->

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px" />-->

        <!--<include layout="@layout/item_purchase_first_cons" />-->

        <!--<include layout="@layout/item_quote_dir_po" />-->


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/iv_img2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/yibaojia_red" />
    </RelativeLayout>

</FrameLayout>