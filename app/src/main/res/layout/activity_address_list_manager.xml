<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.hldj.hmyg.saler.AdressActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="@dimen/x265"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y5"
            android:layout_toLeftOf="@+id/iv_search_adress"
            android:layout_toRightOf="@+id/btn_back"
            android:background="@drawable/search_edit_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_addr_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/round_rectangle_bg"
                android:ems="10"
                android:gravity="center"
                android:hint="请输入关键字"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="2.5dip"
                android:paddingRight="2.5dip"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="14.5sp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/ic_arrow_left_green" />


        <com.coorchice.library.SuperTextView
            android:id="@+id/iv_search_adress"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x15"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/main_color"
            android:textSize="@dimen/textSizeXXX" />
        <!--<ImageView-->
        <!--android:id="@+id/iv_add_adress"-->
        <!--android:layout_width="@dimen/x48"-->
        <!--android:layout_height="@dimen/x24"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/x15"-->
        <!--android:src="@drawable/icon_add" />-->
    </RelativeLayout>

    <View style="@style/View_line_gray_1dp" />


    <com.hldj.hmyg.buyer.weidet.CoreRecyclerView
        android:id="@+id/address_recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_bg_ed" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y34">
        <Button
            android:id="@+id/btn_add_addt"
            style="@style/bottom_button_green"
            android:layout_height="@dimen/y34"
            android:text="新增地址" />

    </LinearLayout>


</LinearLayout>