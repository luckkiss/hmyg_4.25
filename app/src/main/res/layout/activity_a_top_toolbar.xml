<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#FFFFFF"
    android:padding="4dp"
    app:layout_scrollFlags="scroll|enterAlways">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_a_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_top_default"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/iv_a_msg"
            android:background="@drawable/search_edit_selector"
            android:drawablePadding="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="-2dp"
            android:text="@string/search_content"
            android:textColor="@color/gray"
            app:corner="7dp"
            app:isShowState="true"
            app:left_bottom_corner="true"
            app:left_top_corner="true"
            app:pla_paddingLeft="2dp"
            app:right_bottom_corner="true"
            app:right_top_corner="true"
            app:solid="#f5f5f5"
            app:state_drawable="@drawable/search_icon"
            app:state_drawable_height="17dp"
            app:state_drawable_mode="center"
            app:state_drawable_padding_left="@dimen/home_search_padding"
            app:state_drawable_width="17dp"
            app:stroke_color="#ededed"
            app:stroke_width="1px"
            app:text_fill_color="@color/text_color999"
            app:text_stroke_width="0px" />

