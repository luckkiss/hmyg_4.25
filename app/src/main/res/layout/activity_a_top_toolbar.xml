<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_content"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="#FFFFFF"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_a_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_top_default"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iv_a_msg"
        android:background="@drawable/search_edit_selector"
        android:drawableLeft="@drawable/home_search_icon"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/search_content"
        android:textColor="@color/gray" />

    <ImageView
        android:id="@+id/iv_a_msg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/home_message" />


</RelativeLayout>